    <createTable tableName="reference">
         <column name="reference_id" type="int">
           <constraints primaryKey="true"/>
         </column>
         <column name="value" type="varchar(64)">
           <constraints nullable="false"/>
         </column>
         <column name="display_name" type="varchar(500)">
