		      </executions>
		    </plugin>
			<plugin>
		        <groupId>com.coderplus.maven.plugins</groupId>
		        <artifactId>copy-rename-maven-plugin</artifactId>
		        <version>1.0</version>
		        <executions>
		          <execution>
		            <id>Rename service-wrapper.exe to toms-service.exe</id>
		            <phase>install</phase>
		            <goals>
		              <goal>rename</goal>
		            </goals>
		            <configuration>
		              <sourceFile>../../../Builds/TOMS/Toms_Endur_API/TOMS-service/service-wrapper.exe</sourceFile>
		              <destinationFile>../../../Builds/TOMS/Toms_Endur_API/TOMS-service/toms-service.exe</destinationFile>
		            </configuration>
		          </execution>
		          <execution>
		            <id>Rename TOMS-Service-1.0.0-exec.jar to TOMS-Service-1.0.0.jar</id>
		            <phase>install</phase>
		            <goals>
		              <goal>rename</goal>
		            </goals>
		            <configuration>
		              <sourceFile>../../../Builds/TOMS/Toms_Endur_API/TOMS-service/TOMS-Service-1.0.0-exec.jar</sourceFile>
		              <destinationFile>../../../Builds/TOMS/Toms_Endur_API/TOMS-service/TOMS-Service-1.0.0.jar</destinationFile>
		            </configuration>
		          </execution>
		        </executions>
		    </plugin> 		    
