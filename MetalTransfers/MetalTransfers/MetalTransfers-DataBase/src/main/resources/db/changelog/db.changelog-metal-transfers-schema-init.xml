<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="fintark" id="Metal Transfers Schema Init">

        <createTable tableName="USER_jm_loco" schemaName="dbo">
            <column name="loco_id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="loco_name" type="varchar"/>
            <column name="is_transfer_loco" type="varchar"/>
            <column name="int_BU" type="varchar"/>
            <column name="is_PMM" type="varchar"/>
            <column name="default_form" type="varchar"/>
            <column name="country" type="varchar"/>
            <column name="is_pmm_id" type="int"/>
        </createTable>
        <createTable tableName="USER_jm_form" schemaName="dbo">
            <column name="form" type="varchar">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="USER_jm_tax_sub_type_transfers" schemaName="dbo">
            <column name="active" type="varchar">
                <constraints primaryKey="true"/>
            </column>
            <column name="from_account_country" type="varchar"/>
            <column name="to_account_country" type="varchar"/>
            <column name="to_account_region" type="varchar"/>
            <column name="to_bu_internal" type="varchar"/>
            <column name="metal" type="varchar"/>
            <column name="lbma" type="varchar"/>
            <column name="lppm" type="varchar"/>
            <column name="tax_subtype" type="varchar"/>
        </createTable>
        <createTable tableName="USER_JM_negative_threshold">
            <column name="value" type="float">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>